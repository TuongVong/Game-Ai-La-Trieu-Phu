<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:id="@+id/menu"
    tools:context="tuongvong.appgame.android.milionnaire.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="top">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- image rank -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView"
            android:layout_weight="1" />

        <!-- Button bắt đầu chơi -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/answer_choose"
            android:text="Bắt Đầu"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/btn_batDau"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- Button huớng dẫn -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:text="Huớng dẫn"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/btn_troGiup"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- Button Logout -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:text="Log out"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/btn_logout"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#212121"
        android:layout_weight="0.5">

        <!-- CardView tạo khung tròn cho hình ảnh -->

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <!-- Image account facebook người dùng -->

            <ImageView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:id="@+id/imageView1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>

        </android.support.v7.widget.CardView>

        <!-- TextView tên người dùng -->

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/nameTextView"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="17sp"
            android:layout_weight="1" />

        <!-- Image level người dùng -->

        <ImageView
            android:id="@+id/rank_icon"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:background="#212121"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center">
        </ImageView>

        <!-- TextView điểm của người dùng -->

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff00"
            android:id="@+id/diemTextView"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="4dp"
            android:textSize="17sp"
            android:layout_weight="1" />

        <!-- ImageView icon tiền -->

        <TextView
            android:layout_height="30dp"
            android:layout_width="40dp"
            android:id="@+id/imageView_diem"
            android:textColor="#ffff00"
            android:text="Điểm"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>

</LinearLayout>
